log Si.log

units electron                                                   
dimension 2                                                          
processors * * *                                                        
boundary p p p                                                      
atom_style molecular
read_data ./input_files/Si.data            
timestep $(25*0.02418884326) 

variable potential_path equal "input_files/PARM_Si.lammps"
print "Setting up potential from ${potential_path}"
include ${potential_path}                                                 

thermo 0                                                       
thermo_style custom step pe ke epair ebond etotal vol temp              

dump 1 all custom 1000000000 Si_dump.lammpstrj id element type x y z     
dump_modify 1 element Si                                             
thermo_modify line yaml                                                  

min_style sd                                                         
minimize 1.0e-6 0.0 1000000 10000000                                       

