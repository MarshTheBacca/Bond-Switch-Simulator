{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake .. -DCMAKE_TOOLCHAIN_FILE=${workspaceFolder}/toolchain.cmake",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build",
            "dependsOn": "configure",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -rf output_files",
            "options": {
                "cwd": "${workspaceFolder}/testing"
            },
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./netmc.x -d",
            "options": {
                "cwd": "${workspaceFolder}/testing"
            },
            "dependsOn": [
                "build",
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "cleanBuildRun",
            "dependsOn": [
                "clean",
                "build",
                "run"
            ],
            "problemMatcher": []
        }
    ]
}